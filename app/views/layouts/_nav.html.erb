<div id="wrapper">
  <div class="overlay"></div>
  
  <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
    <ul class="nav sidebar-nav">
      <li class="menu-logo">  </li>
      <li> <a href="/spas"><i class="fa fa-fw fa-home"></i> Home</a> </li>
      <li> <a href="/spas/menu"><i class="fa fa-fw fa-info-circle"></i> Menu</a> </li>
      <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-fw fa-question-circle"></i> FAQs <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li id="drop-text1"><%= link_to 'Colon Hydrotherapy', '/spas/faq' %></li>
          <li id="drop-text2"><%= link_to 'Floatation', '/spas/faq2' %></li>
        </ul>
      </li>
    </ul>
  </nav>
 
  <div id="page-content-wrapper">
    <button type="button" class="hamburger is-closed animated fadeInLeft" data-toggle="offcanvas">
      <span class="hamb-top"></span>
      <span class="hamb-middle"></span>
      <span class="hamb-bottom"></span>
    </button>
  </div> 
</div>

<script> 
  $(document).ready(function () {
    var trigger = $('.hamburger'),
        overlay = $('.overlay'),
       isClosed = false;
   
      trigger.click(function () {
        hamburger_cross();     
      });
   
      function hamburger_cross() {
   
        if (isClosed == true) {         
          overlay.hide();
          trigger.removeClass('is-open');
          trigger.addClass('is-closed');
          isClosed = false;
        } else {  
          overlay.show();
          trigger.removeClass('is-closed');
          trigger.addClass('is-open');
          isClosed = true;
        }
    }
     
    $('[data-toggle="offcanvas"]').click(function () {
          $('#wrapper').toggleClass('toggled');
    }); 
  });
</script>



